{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "react-native",
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "target": "esnext",
    "lib": [
      "esnext"
    ],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    "baseUrl": ".",
    "typeRoots": [
      "./src/types"
    ],
    "paths": {
      "@libs/*": [
        "libs/*"
      ],
      "@assets/*": [
        "src/assets/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@constants/*": [
        "src/constants/*"
      ],
      "@i18n/*": [
        "src/i18n/*"
      ],
      "@navigation/*": [
        "src/navigation/*"
      ],
      "@screens/*": [
        "src/screens/*"
      ],
      "@services/*": [
        "src/services/*"
      ],
      "@styles/*": [
        "src/styles/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@state/*": [
        "src/state/*"
      ],
      "@contexts/*": [
        "src/contexts/*"
      ],
      "@hooks/*": [
        "src/hooks/*"
      ],
      "@hoc/*": [
        "src/hoc/*"
      ],
      "@config/*": [
        "src/config/*"
      ],
      "@controllers/*": [
        "src/controllers/*"
      ],
      "@providers/*": [
        "src/providers/*"
      ],
      "@src/*": [
        "src/*"
      ],
      "@database/*": [
        "database/*"
      ],
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "index.android.js",
    "index.js",
    "libs",
    "src",
    "test",
    "storybook",
    "metro.config.js",
    ".eslintrc.js",
    "babel.config.js",
    "react-native.config.js",
  ]
}